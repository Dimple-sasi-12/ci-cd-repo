pipeline {
    agent any
    tools {
        maven 'maven'
    }
    environment {
        SCANNER_HOME = tool 'sonarqube'
        COLOR_MAP = ["SUCCESS": "good", "FAILURE": "danger", "UNSTABLE": "warning"]
    }
    stages {
        stage('Git Checkout') {
            steps {
                git 'https://github.com/Dimple-sasi-12/ci-cd-repo.git'
            }
        }
        stage('Compile') {
            steps {
                sh 'mvn compile'
            }
        }
        stage('Code Analysis') {
            steps {
                withSonarQubeEnv('sonarqube') { // Replace 'sonar-server' with your configured SonarQube server name
                    sh '''
                        $SCANNER_HOME/bin/sonar-scanner \
                        -Dsonar.projectName=Java-Springboot \
                        -Dsonar.java.binaries=target/classes \
                        -Dsonar.projectKey=Java-Springboot
                    '''
                }
            }
        }
        stage('Package') {
            steps {
                sh 'mvn install'
            }
        }
        stage('Docker Build') {
            steps {
                script {
                    sh 'docker build -t java-img .'
                }
            }
        }
        stage('Run Docker Container') {
            steps {
                script {
                    sh 'docker run -itd -p 8082:8000 java-img'
                }
            }
        }
    }
    post {
        always {
            echo 'Sending Slack Notification.'
            slackSend channel: '#dev',
            color: COLOR_MAP[currentBuild.currentResult],
            message: "*${currentBuild.currentResult}:* Job ${env.JOB_NAME} build ${env.BUILD_NUMBER} \nMore info at: ${env.BUILD_URL}"
        }
    }
}

